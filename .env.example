# SQLRestCSharp Configuration
# Copy this file to .env and replace the placeholder values with your actual configuration

# PostgreSQL Database Connection String
# Format: Host=<hostname>;Port=<port>;Database=<database_name>;Username=<username>;Password=<password>
SQL_CONNECTION_STRING="Host=localhost;Port=5432;Database=your_database;Username=your_username;Password=your_password"

# JWT (JSON Web Token) Settings
# Generate a secure random key for production (minimum 32 characters)
JWT_KEY="your_super_secret_jwt_key_that_should_be_at_least_32_characters_long"

# JWT Issuer - typically your application domain
JWT_ISSUER="your_application.com"

# JWT Audience - typically your API domain
JWT_AUDIENCE="your_api.com"
